@model WebProje.Models.EntityFramework.FILMLER
@{
    ViewBag.Title = "FİLM EKLE";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <title>@ViewBag.Title</title>
}

<h2>Yeni Film Ekle</h2>

<form method="post" class="form-group">
    <div>
        <label>KATEGORI ADI</label>
        @Html.DropDownListFor(m => m.KATEGORILER.KATEGORIID , (List<SelectListItem>)ViewBag.veri, new { @class = "form-control" })
    </div>
    <div>
        <label>FİLM ADI</label>
        <input type="text" class="form-control" name="FILMAD" />
    </div>
    <div>
        <label>FİLM YILI</label>
        <input type="date" class="form-control" name="FILMYIL" />
    </div>
    <div>
        <label>FİLM PUAN</label>
        <input type="text" class="form-control" name="FILMPUAN" />
    </div>
    <div>
        <label>FİLM OZET</label>
        <textarea class="form-control" name="FILMOZET"></textarea>
    </div>
    <div>
        <label>FİLM URL</label>
        <input type="text" class="form-control" name="FILMFOTO" />
    </div>
    <div style="margin-top:20px">
        <button class="btn btn-info">@WebProje.Resources.HomeTexts.ekle</button>
    </div>


</form>