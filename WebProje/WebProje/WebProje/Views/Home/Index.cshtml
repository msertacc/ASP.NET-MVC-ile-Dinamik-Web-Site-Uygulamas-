@using WebProje.Models.EntityFramework
@model List<FILMLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2 align="center" class="bg-warning" style=" color:#000000;font:bold 20px tahoma;">@WebProje.Resources.HomeTexts.ayineniyiuclusu</h2>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/yesilyol.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;">@WebProje.Resources.HomeTexts.yesilyol - 1999</h5>
                <p style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;">@WebProje.Resources.HomeTexts.yesilyoltanitim</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/awakenings.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;"> @WebProje.Resources.HomeTexts.uyanis - 1990</h5>
                <p style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;">
                    @WebProje.Resources.HomeTexts.uyanistanitim
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/12angry.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;"> @WebProje.Resources.HomeTexts._12ofkeliadam - 1957</h5>
                <p style="background-color:#000000; color:#ffffff;font:bold 20px tahoma;">@WebProje.Resources.HomeTexts._12ofkeliadamtanitim</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div style="margin-top:50px">
    <h2 align="center" class="bg-warning" style=" color:#000000;font:bold 20px tahoma;">@WebProje.Resources.HomeTexts.editoruneniyiuclusu</h2>
    <div class="card-group">
        @foreach (var veriler in Model)
        {
            <div class="card">
                <img class="card-img-top" src="@veriler.FILMFOTO" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@veriler.FILMAD -- @veriler.FILMYIL.Value.Date.Year</h5>
                    <p class="card-text">FİLM PUANI : @veriler.FILMPUAN</p>
                    <p class="card-text">@veriler.FILMOZET</p>

                </div>
            </div>
        }
    </div>
</div>




