@using WebProje.Models.EntityFramework
@model List<KATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veri in Model)
        {
        <tr>

            <td>@veri.KATEGORIID</td>
            <td>@veri.KATEGORIAD</td>
            <td><a class="btn btn-danger" href="/Kategori/Sil/@veri.KATEGORIID">SİL</a></td>
            <td><a class="btn btn-primary" href="/Kategori/KategoriGetir/@veri.KATEGORIID">GUNCELLE</a></td>

        </tr>
        }
        </tbody>
</table>



<a href="/Kategori/Ekle" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
